// Defines indicator's parameter values for the given pair symbol and timeframe.
struct Indi_ZigZag_Params_{{ Timeframe }} : Indi_ZigZag_Params {
  Indi_ZigZag_Params_{{ Timeframe }}() : Indi_ZigZag_Params(indi_zigzag_defaults, PERIOD_{{ Timeframe }}) {
    applied_price = (ENUM_APPLIED_PRICE){{ ZigZag_Indi_ZigZag_Applied_Price | default(0) }};
    ma_method = {{ ZigZag_Indi_ZigZag_MA_Method | default(0) }};
    period = {{ ZigZag_Indi_ZigZag_Period | default(0) }};
    shift = {{ ZigZag_Shift | default(0) }};
  }
} indi_zigzag_{{ Timeframe | lower }};

// Defines strategy's parameter values for the given pair symbol and timeframe.
