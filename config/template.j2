    signal_close_method = {{ ZigZag_SignalCloseMethod | default(0) }};
    signal_close_level = (float){{ ZigZag_SignalCloseLevel | default(0) }};
    price_stop_method = {{ ZigZag_PriceStopMethod | default(0) }};
    price_stop_level = (float){{ ZigZag_SignalCloseLevel | default(1) }};
    tick_filter_method = {{ ZigZag_TickFilterMethod  | default(1) }};
    max_spread = {{ ZigZag_MaxSpread | default(0) }};
  }
} stg_zigzag_{{ Timeframe | lower }};
